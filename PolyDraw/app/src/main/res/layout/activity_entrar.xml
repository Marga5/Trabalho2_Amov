<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntrarActivity"
    android:orientation="vertical"
    android:background="@drawable/mapa"
    android:layout_gravity="center">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onVoltar"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        android:background="@android:color/transparent"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            style="@style/Theme.PolyDraw.Buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:onClick="onCriar"
            android:text="@string/btCreate"
            app:icon="@drawable/ic_play_arrow_black_24dp"
            android:layout_marginTop="250dp"
            />

        <Button
            style="@style/Theme.PolyDraw.Buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_edittext"
            android:onClick="onJuntar"
            android:text="@string/btJoin"
            app:icon="@drawable/ic_play_arrow_black_24dp" />

    </LinearLayout>


</LinearLayout>